            <ImageView fitHeight="38.0" fitWidth="61.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icon/exit.jpg" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <AnchorPane fx:id="containerGame" layoutX="60.0" layoutY="39.0" prefHeight="509.0" prefWidth="711.0" />
   </children>
</AnchorPane>
