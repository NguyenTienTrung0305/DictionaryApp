<AnchorPane prefHeight="582.0" prefWidth="830.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.GameController">
   <children>
      <AnchorPane layoutX="120.0" layoutY="87.0" prefHeight="428.0" prefWidth="590.0" style="-fx-background-color: CCFFFF;">
         <children>
            <AnchorPane layoutX="37.0" layoutY="33.0" prefHeight="90.0" prefWidth="89.0" styleClass="buttonGame" stylesheets="@../style/style.css">
               <children>
                  <Button fx:id="btnGuessGame" layoutX="7.0" mnemonicParsing="false" onAction="#StartGuessGame" prefHeight="61.0" prefWidth="67.0" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true" styleClass="imgGame">
